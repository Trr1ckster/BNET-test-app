<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:layout_marginHorizontal="14dp"
        android:layout_marginTop="24dp">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" />

        <ImageView
            android:id="@+id/image_product_details"
            android:layout_width="117dp"
            android:layout_height="183dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp" />


        <ImageButton
            android:id="@+id/favorite_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/white"
            android:src="@drawable/star" />

    </FrameLayout>

    <TextView
        android:id="@+id/title_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="14dp"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:textAppearance="@style/Text.Bold.20"
        tools:text="@tools:sample/lorem" />

    <TextView
        android:id="@+id/description_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="14dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:textAppearance="@style/Text.Regular.15" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="14dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/map_pointer"
        android:paddingLeft="130dp"
        android:paddingRight="130dp"
        android:text="@string/button_text"
        android:textAppearance="@style/Text.Bold.12"
        android:textColor="@color/black" />

</LinearLayout>